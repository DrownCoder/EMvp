<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_p_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        app:layout_constraintBottom_toTopOf="@id/tv_p_price"
        app:layout_constraintLeft_toRightOf="@id/iv_p_img"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18dp"
        tools:text="商品名称" />

    <TextView
        android:id="@+id/tv_p_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_p_name"
        app:layout_constraintTop_toBottomOf="@id/tv_p_name"
        tools:text="价格" />

</android.support.constraint.ConstraintLayout>